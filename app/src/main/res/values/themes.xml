<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokemon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryDark">@color/blue_200</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Estilo da Splash Screen -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryDark">@color/blue_200</item>
    </style>

    <!-- Estilo da Main Screen -->
    <style name="MainTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>
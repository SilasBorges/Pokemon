<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pokemon" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.Pokemon" parent="Base.Theme.Pokemon" />

    <!-- Estilo da Splash Screen -->
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryDark">@color/blue_200</item>
    </style>
    
    <!-- Text Style -->
    
    <style name="text_robotBold_24_black">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="text_robotBold_16_white">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
    
</resources>
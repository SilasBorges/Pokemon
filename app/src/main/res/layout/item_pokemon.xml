<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="130dp"
    android:background="@drawable/background_recycler"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginEnd="@dimen/margin_8"
    android:layout_marginStart="@dimen/margin_8"
    android:elevation="@dimen/margin_16">

    <TextView
        android:id="@+id/text_name"
        style="@style/text_robotBold_16_white"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pikachu" />

    <ImageView
        android:id="@+id/background_pokemon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.2"
        android:src="@drawable/pokeball"
        app:layout_constraintBottom_toBottomOf="@id/imagePokemon"
        app:layout_constraintEnd_toEndOf="@+id/imagePokemon"
        app:layout_constraintStart_toStartOf="@+id/imagePokemon"
        app:layout_constraintTop_toTopOf="@+id/imagePokemon" />

    <ImageView
        android:id="@+id/imagePokemon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:elevation="@dimen/margin_4"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>